<xs:schema attributeFormDefault="unqualified" 
  elementFormDefault="qualified" 
  xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="RuleTemplate">
    <xs:complexType>
      <xs:sequence>
        <xs:element name="Rule" maxOccurs="unbounded" minOccurs="0">
          <xs:complexType>
            <xs:simpleContent>
              <xs:extension base="xs:string">
                <xs:attribute type="xs:string" name="miringRuleID"  use="required"/>
                <xs:attribute type="xs:string" name="severity"      use="required"/>
                <xs:attribute type="xs:string" name="errorMessage"  use="optional"/>
                <xs:attribute type="xs:string" name="solutionText"  use="optional"/>
                <xs:attribute type="xs:string" name="nodeName"      use="optional"/>
                <xs:attribute type="xs:string" name="attributeName" use="optional"/>
              </xs:extension>
            </xs:simpleContent>
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>